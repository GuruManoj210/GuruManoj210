---
import site from '@data/site.config';
import SocialIcon from './SocialIcon';
const size = Astro.props.size ?? 18 as number;
const variant = Astro.props.variant ?? 'row' as 'row' | 'grid';
---
<div class={variant === 'row' ? 'flex flex-wrap items-center justify-center gap-2 sm:gap-3' : 'grid grid-cols-3 sm:grid-cols-4 gap-3'}>
  {site.socials.map((s) => (
    <a href={s.url} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-1.5 sm:gap-2 px-2 py-1 rounded border border-gray-300 dark:border-white/10 hover:border-gray-400 dark:hover:border-white/20 bg-white/80 dark:bg-white/5 hover:bg-white dark:hover:bg-white/10 transition whitespace-nowrap">
      <SocialIcon client:load platform={s.platform} size={size} />
      {s.handle ? <span class="text-xs sm:text-sm opacity-80 truncate max-w-[80px]">{s.handle}</span> : null}
    </a>
  ))}
</div>
