---
import site from '@data/site.config';
import Section from './Section';
import SocialLinks from './SocialLinks.astro';
---
<Section client:visible id="contact" title="Contact">
  <div class="grid md:grid-cols-2 gap-4 sm:gap-6">
    <div class="card p-5 sm:p-6 space-y-3">
      <h3 class="text-xl font-semibold text-gray-900 dark:text-white">Get in Touch</h3>
      {site.contact.email && <p class="text-sm sm:text-base"><strong>Email:</strong> <a class="underline break-all hover:text-gray-700 dark:hover:text-gray-300 transition" href={`mailto:${site.contact.email}`}>{site.contact.email}</a></p>}
      {site.contact.phone && <p class="text-sm sm:text-base"><strong>Phone:</strong> {site.contact.phone}</p>}
      {site.contact.address && <p class="text-sm sm:text-base"><strong>Address:</strong> {site.contact.address}</p>}
      <div class="pt-2">
        <p class="text-sm font-medium mb-2">Connect with me:</p>
        <SocialLinks client:load size={16} variant="row" />
      </div>
      <div class="pt-4 border-t border-white/10">
        <p class="text-sm font-medium mb-3">Quick Save Contact</p>
        <div class="flex justify-center">
          <div class="relative group">
            <img 
              src="/images/qr-code.png" 
              alt="VCard QR Code" 
              class="w-40 h-40 rounded-lg border-2 border-gray-300 dark:border-white/20 bg-white p-2 transition-transform group-hover:scale-105"
              onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
            />
            <div class="w-40 h-40 bg-gray-200 dark:bg-white/10 rounded-lg border-2 border-dashed border-gray-300 dark:border-white/20 hidden flex-col items-center justify-center p-4">
              <svg class="w-12 h-12 mb-2 opacity-40" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v1m6 11h2m-6 0h-2v4m0-11v3m0 0h.01M12 12h4.01M16 20h4M4 12h4m12 0h.01M5 8h2a1 1 0 001-1V5a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1zm12 0h2a1 1 0 001-1V5a1 1 0 00-1-1h-2a1 1 0 00-1 1v2a1 1 0 001 1zM5 20h2a1 1 0 001-1v-2a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1z" />
              </svg>
              <p class="text-xs text-center opacity-70">Add your QR code</p>
              <p class="text-xs text-center opacity-50">/public/images/qr-code.png</p>
            </div>
          </div>
        </div>
        <p class="text-xs opacity-70 mt-3 text-center">Scan to save my contact</p>
      </div>
    </div>
    <form class="card p-5 sm:p-6 space-y-4" method="POST" action={site.contact.formspreeId ? `https://formspree.io/f/${site.contact.formspreeId}` : '#'}>
      <h3 class="text-xl font-semibold text-gray-900 dark:text-white">Connect</h3>
      <input type="text" name="_gotcha" class="hidden" tabindex="-1" autocomplete="off" />
      <div class="grid gap-2">
        <label class="text-sm font-medium">Name <span class="text-red-500">*</span></label>
        <input name="name" required class="px-3 py-2.5 rounded-lg border border-gray-300 dark:border-white/20 bg-white dark:bg-white/10 focus:border-gray-500 dark:focus:border-gray-400 focus:ring-2 focus:ring-gray-500/20 dark:focus:ring-gray-400/20 outline-none transition" placeholder="Your full name" />
      </div>
      <div class="grid gap-2">
        <label class="text-sm font-medium">Email <span class="text-red-500">*</span></label>
        <input type="email" name="email" required class="px-3 py-2.5 rounded-lg border border-gray-300 dark:border-white/20 bg-white dark:bg-white/10 focus:border-gray-500 dark:focus:border-gray-400 focus:ring-2 focus:ring-gray-500/20 dark:focus:ring-gray-400/20 outline-none transition" placeholder="your@email.com" />
      </div>
      <div class="grid gap-2">
        <label class="text-sm font-medium">Phone</label>
        <input type="tel" name="phone" class="px-3 py-2.5 rounded-lg border border-gray-300 dark:border-white/20 bg-white dark:bg-white/10 focus:border-gray-500 dark:focus:border-gray-400 focus:ring-2 focus:ring-gray-500/20 dark:focus:ring-gray-400/20 outline-none transition" placeholder="+91 1234567890" />
      </div>
      <div class="grid gap-2">
        <label class="text-sm font-medium">Message</label>
        <textarea name="message" rows="5" class="px-3 py-2.5 rounded-lg border border-gray-300 dark:border-white/20 bg-white dark:bg-white/10 focus:border-gray-500 dark:focus:border-gray-400 focus:ring-2 focus:ring-gray-500/20 dark:focus:ring-gray-400/20 outline-none transition resize-none" placeholder="Your message..."></textarea>
      </div>
      <button type="submit" class="w-full px-4 py-2.5 rounded-lg border-2 border-gray-800 dark:border-gray-200 text-gray-800 dark:text-gray-200 font-medium hover:bg-gray-800 hover:text-white dark:hover:bg-gray-200 dark:hover:text-gray-900 hover:shadow-lg transition-all disabled:opacity-50" disabled={!site.contact.formspreeId}>Send Message</button>
      {!site.contact.formspreeId && <p class="text-xs sm:text-sm opacity-70">Add your <code class="px-1 py-0.5 rounded bg-gray-200 dark:bg-white/10">formspreeId</code> in <code class="px-1 py-0.5 rounded bg-gray-200 dark:bg-white/10">site.config.ts</code> to enable the form.</p>}
    </form>
  </div>
</Section>
