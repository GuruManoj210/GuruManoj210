---
import site from '@data/site.config';
import Section from './Section';
---
<Section client:visible id="blocks" title="Blocks / Publications">
  <div class="grid md:grid-cols-2 gap-4">
    {site.publications && site.publications.length > 0 ? site.publications.map((pub) => (
      <a href={pub.url} target="_blank" rel="noopener noreferrer" class="card p-5 hover:bg-white/70 dark:hover:bg-white/10 transition">
        <h3 class="font-semibold">{pub.title}</h3>
        <p class="text-sm opacity-70 mt-1">{pub.outlet} {pub.date ? `Â· ${pub.date}` : ''}</p>
      </a>
    )) : (
      <div class="card p-6 opacity-80">Add publications in <code>site.config.ts</code>.</div>
    )}
  </div>
</Section>
