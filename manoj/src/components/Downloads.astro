---
import site from '@data/site.config';
import Section from './Section';
---
<Section client:visible id="downloads" title="Downloads">
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-3 sm:gap-4">
    {site.downloads && site.downloads.length > 0 ? site.downloads.map((d) => (
      <a href={d.file} download class="card p-4 sm:p-5 hover:bg-white/80 dark:hover:bg-white/10 hover:scale-[1.02] transition-all block group">
        <div class="flex items-start gap-3">
          <span class="text-2xl group-hover:scale-110 transition-transform">ðŸ“¥</span>
          <div class="flex-1 min-w-0">
            <h3 class="font-medium text-sm sm:text-base break-words">{d.title}</h3>
            {d.description && <p class="text-xs sm:text-sm opacity-70 mt-1 break-words">{d.description}</p>}
          </div>
        </div>
      </a>
    )) : (
      <div class="card p-4 sm:p-6 opacity-80 text-center col-span-full">
        <div class="text-3xl mb-3">ðŸ“‚</div>
        <p class="text-sm sm:text-base break-words">Add files in <code class="px-2 py-1 rounded bg-gray-200 dark:bg-white/10 text-xs">public/downloads</code> and list them in <code class="px-2 py-1 rounded bg-gray-200 dark:bg-white/10 text-xs">site.config.ts</code>.</p>
      </div>
    )}
  </div>
</Section>
