---
import site from '@data/site.config';
import Section from './Section';
---
<Section client:visible id="downloads" title="Downloads">
  <div class="grid sm:grid-cols-2 md:grid-cols-3 gap-4">
    {site.downloads && site.downloads.length > 0 ? site.downloads.map((d) => (
      <a href={d.file} download class="card p-5 hover:bg-white/70 dark:hover:bg-white/10 transition block">
        <h3 class="font-medium">{d.title}</h3>
        {d.description && <p class="text-sm opacity-70 mt-1">{d.description}</p>}
      </a>
    )) : (
      <div class="card p-6 opacity-80">Add files in <code>public/downloads</code> and list them in <code>site.config.ts</code>.</div>
    )}
  </div>
</Section>
