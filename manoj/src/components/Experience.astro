  <div class="grid gap-4 sm:gap-5">
    {site.experience.map((exp) => (
      <div class="card p-4 sm:p-6 hover:shadow-xl transition-shadow">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-1 sm:gap-2">
          <h3 class="text-base sm:text-lg font-semibold break-words">ğŸ’¼ {exp.role} <span class="opacity-70">Â·</span> {exp.company}</h3>
          <p class="text-xs sm:text-sm opacity-70 whitespace-nowrap flex-shrink-0">ğŸ“… {exp.startDate} â€“ {exp.endDate || 'Present'}</p>
        </div>
        {exp.location && <p class="text-xs sm:text-sm opacity-70 mt-1 break-words">ğŸ“ {exp.location} {exp.employmentType ? `Â· ${exp.employmentType}` : ''}</p>}
