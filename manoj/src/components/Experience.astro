---
import site from '@data/site.config';
import Section from './Section';
---
<Section client:visible id="experience" title="Experience">
  <div class="grid gap-4">
    {site.experience.map((exp) => (
      <div class="card p-6">
        <div class="flex flex-wrap items-center justify-between gap-2">
          <h3 class="text-lg font-semibold">{exp.role} · {exp.company}</h3>
          <p class="text-sm opacity-70">{exp.startDate} – {exp.endDate || 'Present'}</p>
        </div>
        {exp.location && <p class="text-sm opacity-70 mt-1">{exp.location} {exp.employmentType ? `· ${exp.employmentType}` : ''}</p>}
        {exp.summary && <p class="mt-3 opacity-90">{exp.summary}</p>}
        {exp.achievements && (
          <ul class="list-disc list-inside mt-3 space-y-1">
            {exp.achievements.map(a => <li>{a}</li>)}
          </ul>
        )}
        {exp.tech && (
          <div class="mt-3 flex flex-wrap gap-2">
            {exp.tech.map(t => <span class="text-xs px-2 py-1 rounded bg-white/40 dark:bg-white/10 border border-white/20">{t}</span>)}
          </div>
        )}
      </div>
    ))}
  </div>
</Section>
