<button
  class="inline-flex items-center justify-center rounded-full border border-white/15 bg-white/60 dark:bg-black/30 backdrop-blur px-2.5 py-2 text-sm hover:shadow transition"
  aria-label="Toggle theme"
  title="Toggle theme"
  onclick="(() => { const root = document.documentElement; const isDark = root.classList.toggle('dark'); localStorage.setItem('theme', isDark ? 'dark' : 'light'); })()"
>
