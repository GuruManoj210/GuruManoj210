---
import site from '@data/site.config';
import Section from './Section';
---
<Section client:visible id="skills" title="Skills">
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-3 sm:gap-4">
    {site.skills.map((s) => (
      <div class="card p-4 sm:p-5 hover:scale-[1.02] transition-transform">
        <h3 class="font-semibold text-base sm:text-lg break-words">{s.name}</h3>
        {s.level && <p class="text-xs sm:text-sm opacity-70 mt-1">{s.level}</p>}
        {s.keywords && (
          <div class="mt-3 flex flex-wrap gap-2">
            {s.keywords.map(k => <span class="text-xs px-2 py-1 rounded bg-white/50 dark:bg-white/10 border border-white/20 whitespace-nowrap">{k}</span>)}
          </div>
        )}
      </div>
    ))}
  </div>
</Section>
